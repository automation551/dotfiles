cpu_avg_samples 2
net_avg_samples 2
no_buffers yes
out_to_console yes
update_interval 3.0
uppercase no

TEXT
$mpd_status - $mpd_vol% - $mpd_smart | ${time %A %d %B %Y | %H:%M}
